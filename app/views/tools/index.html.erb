<h2 id="tools_title" style="text-align: center;">测试工具</h2>

<h3>cid和appid互查</h3>
<div id="cid_appid">
  <%= form_tag tools_index_path, :remote=> true, :method => "get", :html => { class: "form-horizontal", role: "form" } do %>
  <div class="form-group">
    <div class="col-md-2 col-md-offset-1">
    <%= label :name, "游戏名字" %>
    <%= text_field_tag :name, params[:name], class: "form-control" %>
    </div>
    <div class="col-md-2">
    <%= label :appId, "appId" %>
    <%= text_field_tag :appId, params[:appId], class: "form-control" %>
    </div>
    <div class="col-md-2">
    <%= label :cId, "cId" %>
    <%= text_field_tag :cId, params[:cId], class: "form-control" %>
    </div>

    <div>
    <br />
    <%= submit_tag "Search cid_appid", class: "btn btn-info" %>
    </div>
  </div>
  <% end %>
</div>

<h3>用户名和ID互查</h3>
<div id="name_id">
  <%= form_tag tools_index_path, :remote=> true, :method => "get", :html => { class: "form-horizontal", role: "form" } do %>
    <div class="form-group">
      <div class="col-md-2 col-md-offset-1">
        <%= label :name, "用户名" %>
        <%= text_field_tag :user_name, params[:user_name], class: "form-control" %>
      </div>
      <div class="col-md-2">
        <%= label :appId, "百度用户名" %>
        <%= text_field_tag :baidu_name, params[:baidu_name], class: "form-control" %>
      </div>

      <div>
        <br />
        <%= submit_tag "Search name_id", class: "btn btn-info" %>
      </div>
    </div>
  <% end %>
</div>

